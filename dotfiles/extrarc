function sp_chromecast(){
  # http://mkchromecast.com/
  local file="${1}"

  sp_has_feature mkchromecast
  if [ ! $? -eq 0 ]; then
    yay -S mkchromecast
  fi

#   function sp_subs(){
#     local file="$1"
#     local filename=$(basename -- "$file")
