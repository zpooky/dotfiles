# # sub/ subs/ Sub Subs Subs-EN
#     return 1
#   }

  if [[ "${file}" =~ ^http ]]; then
    mkchromecast --video -y "${file}"
  else

    if [ ! -e "${file}" ]; then
      echo "no file '${file}'"
