function port_scan() {
  which netstat 2>&1 > /dev/null
  if [ $? -eq 0 ]; then
    # netstat -alnptu | grep -Ei 'Proto|LISTEN'
    netstat --tcp --udp --udplite --raw --listening --program --numeric
  else
    # ss --all --listen --processes --tcp --udp --raw # | grep -Ei 'Proto|LISTEN'
    # -t: --tcp
    # -u: --udp
    # -n: --numeric?
    # -a: --all
    # -p: show pid
    ss -tuna -p | grep 'LISTEN'
    ss -tuna -p | grep 'udp'
  fi
}

