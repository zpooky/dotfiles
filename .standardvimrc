"   " echomsg " tabpagenr():".tabpagenr()." a:cnt:".a:cnt
"   if a:cnt > 0
"     " echomsg " tabpagenr():".tabpagenr()." a:cnt:".a:cnt
"     if tabpagenr() == a:cnt
"       return
"     endif
"     execute "tabnext ".a:cnt
"   else
"     tabnext
"   endif
"   call s:SpookyPrintCurrentFile()
" endfunction
"
