[Install]
WantedBy = default.target

[Unit]
Requires=zfs-mount
After=zfs-mount

# mysyncthing.container
[Container]
ContainerName=mysyncthing
Environment=PUID=1000 PGID=1001 TZ=Etc/UTC
Image=docker.io/syncthing/syncthing:latest
PublishPort=8384:8384
PublishPort=22000:22000/tcp
PublishPort=22000:22000/udp
PublishPort=21027:21027/udp
UserNS=keep-id
Volume=/tank-spooky/syncthing-config:/var/syncthing/config
Volume=/tank-spooky/syncthing-data:/data
AutoUpdate=registry

[Service]
Restart=always
